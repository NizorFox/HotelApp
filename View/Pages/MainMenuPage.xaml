<Page x:Class="HotelApp.View.Pages.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HotelApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenu">

    <Grid Background="#eff2ec">
        <StackPanel Orientation="Horizontal">
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Height="450" Width="200">
                <StackPanel HorizontalAlignment="Center" Height="420" Width="170" Margin="0,15,0,0" Orientation="Vertical" Background="White">
                    <Button Margin="0 10 0 0" Width="150" Height="30" x:Name="journalEvents" FontSize="13" Content="Журнал событий" Click="journalEvents_Click" Background="#d25238" BorderBrush="#d25238"></Button>
                    <Button Margin="0 10 0 0" Width="150" Height="30" x:Name="ManagerList" FontSize="13" Content="Список Менеджеров" Click="ManagerList_Click" Background="#d25238" BorderBrush="#d25238"></Button>
                </StackPanel>
            </StackPanel>
            <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Height="420" Width="570" Orientation="Vertical" Margin="15" Background="White">
                <StackPanel Margin="10 5 10 0" Height="195">
                    <Button Margin="10 10 10 10" Height="185" x:Name="NumberList" FontSize="28" Content="СПИСОК НОМЕРОВ" Click="NumberList_Click" Background="#d25238" BorderBrush="#d25238"/>
                </StackPanel>
                <StackPanel Margin="10 10 10 0" Height="195">
                    <Button Margin="10 10 10 10" Height="185" x:Name="ClientList" FontSize="28" Content="СПИСОК ПОСТОЯЛЬЦЕВ" Click="ClientList_Click" Background="#d25238" BorderBrush="#d25238"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
